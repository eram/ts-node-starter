{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2019",
      "noImplicitAny": true,
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "downlevelIteration": true,      
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": [
      "src/**/*"
    ],
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
    }
  }
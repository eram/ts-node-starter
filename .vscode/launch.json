{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current ts file",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": ["--nolazy", "-r","ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug app",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/index.ts"
            ],
            "runtimeArgs": ["--nolazy", "-r","ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Test current ts file",
            "type": "node",
            "request": "launch",
            "args": [
                "node_modules/jasmine/bin/jasmine",
                "--config=config/jasmine.json",
                "${relativeFile}"
            ],
            "runtimeArgs": ["--nolazy", "-r","ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}
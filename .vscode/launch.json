{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/index.js",
      "runtimeArgs": ["--preserve-symlinks"],
      "smartStep": true,
      "resolveSourceMapLocations": null,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TS this",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "runtimeArgs": ["--preserve-symlinks", "-r", "ts-node/register"],
      "smartStep": true,
      "resolveSourceMapLocations": null,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha TS All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
          "-r",
          "ts-node/register/transpile-only",
          "--allow-console-logs",
          "--timeout",
          "999999",
          "--colors",
          "./{,!(node_modules)src/**}/*.@(test|spec).ts"
      ],
      "runtimeArgs": ["--preserve-symlinks"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true,
      "resolveSourceMapLocations": null
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha TS this",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
          "-r",
          "ts-node/register/transpile-only",
          "--allow-console-logs",
          "--timeout",
          "999999",
          "--colors",
          "${file}"
      ],
      "runtimeArgs": ["--preserve-symlinks"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true,
      "resolveSourceMapLocations": null
    },
  ]
}
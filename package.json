{
  "name": "ts-node-starter",
  "version": "3.2013.0",
  "description": "ts-node-starter is based on https://www.npmjs.com/package/@loopback/build",
  "main": "src/index.ts",
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist build coverage *.log logs .nyc_output *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "start": "npm run build && node ./dist",
    "prepublishOnly": "npm run test",
    "coverage": "open coverage/index.html",
    "test": "lb-nyc npm run mocha",
    "mocha": "lb-mocha --allow-console-logs \"./{,!(node_modules)dist/**}/*.@(test|spec).js\"",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "posttest": "npm run lint",
    "precoverage": "npm test",
    "coverage:ci": "lb-nyc report --reporter=text-lcov | coveralls",
    "test:ci": "lb-nyc npm run mocha"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@loopback/build": "^9.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "eslint": "^8.36.0",
    "ts-node": "^10.9.1"
  },
  "mocha": {
    "require": [
      "source-map-support/register"
    ],
    "recursive": true,
    "exit": true,
    "reporter": "dot",
    "parallel": true,
    "timeout": 10000
  }
}
